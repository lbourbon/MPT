# encoding: utf-8
#:import Button kivy.uix.button
<TelaP>:
    name: 'TelaP'
    FloatLayout:
        canvas.before:
            Color:
                rgba:  .2, .6, .2, 1
            Rectangle:
                pos: self.pos
                size: self.size
# PAINEL SUPERIOR
        Label:
            text: "Musical Personal Trainer"
            color: 1,1,1,1
            #italic: True
            #bold: True
            font_size: self.width * .65
            pos_hint: {"center_x": .4, "center_y": .93}
            size_hint: .1, .1
            y: root.height - self.height
# CONFIGURAÇÕES
        Button:
            background_color: 0,0,0,0
            pos_hint: {"center_x": .93, "center_y": .93}
            size_hint: .07, .04
            on_release: app.root.troca_TelaE()
            canvas:
                Rectangle:
                    source: "images/config.png"
                    pos: self.pos
                    size:self.size
#PAINEL INFERIOR
        Button:
            canvas:
                Color:
                    rgba: 0,0,0,1
                Rectangle:
                    pos: self.pos
                    size:self.size
            size_hint: 1, .15
            y: 0


#ABAS
        AndroidTabs:
            canvas.before:
                Color:
                    rgba:  0,0,0,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 1, .73
            pos_hint: {"left": 0, "top": .88}

# MÚSICAS
            Aba:
                text: 'M\u00DASICAS'
                FloatLayout:
                    canvas.after:
                        Color:
                            rgba: 1,1,1,1
                        Line:
                            points: 0,self.height - 1, root.width, self.height - 1
                            width: 1
                    Label:
                        text: "Area de M\u00FAsica"
                        color: 1,1,1,1
                        pos_hint: {"center_x": .5, "center_y": .85}
                    CheckBox:
                        pos_hint: {"center_x": .8, "center_y": .5}
                        active: True
                    Label:
                        text: "Usar \u00e1udio de outro aplicativo"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        color: 1,1,1,1

#TREINOS
            Aba:
                text: 'TREINOS'
                FloatLayout:
                    canvas:
                        Color:
                            rgba: 1,1,1,1
                        Line:
                            points: 0,self.height - .1, root.width, self.height - .1
                            width: 1

                    ScrollView:
                        size_hint: 1, None
                        size: 800, root.height

                        MyGrid:
                            id: mygrid
                            cols: 1
                            padding: 5, root.height/2.6, 5, 50
                            spacing: 3
                            size_hint_y: None
                            height: 1000
                            Botao_Treino:
                                text: "NOVO TREINO"
                                font_size: 24


# ADD BUTTON
                    Button:
                        pos_hint: {"center_x": .86, "center_y": .10}
                        background_color: 0,0,0,0
                        size_hint: .15, .13
                        on_release: root.add_button()
                        canvas:
                            Rectangle:
                                source: "images/addbutton.png"
                                pos: self.pos
                                size:self.size


# TELA DE EXERCICIOS

<TelaE>:
    name: 'TelaE'
    FloatLayout:
        canvas.before:
            Color:
                rgba:  .1, .1, .1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: 1, .88
        pos_hint: {"x":0, "top":1}
        canvas.after:
            Color:
                rgba: 1,1,1,1
            Line:
                points: 0,self.height - 1, root.width, self.height - 1
                width: 1
        Label:
            text: "TREINO 1"
            font_size: 30
            size_hint: .1, .08
            pos_hint: {"center_x": .5, "center_y": .93,}
        Button:
            text: "BACK"
            font_size: self.width/5
            size_hint: .1, .06
            pos_hint: {"center_x": .92, "center_y": .93}
            on_release: app.root.troca_TelaP()
        ScrollView:
            size_hint: 1, .86
            pos_hint: {"x":0, "y":0}            #size: 800, root.height
            GridLayout:
                cols: 1
                padding: 5
                spacing: 3
                size_hint_y: None
                height: 1000
                FloatLayout:
                    canvas:
                        Color:
                            rgba: 1,0,0,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint: 1, None
                    height: 50
                    FloatLayout:
                        canvas:
                            Color:
                                rgba: 0,0,0,1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        size_hint: 1, None
                        height: 48
                        pos_hint: {'x': 0, 'center_y':.5}
                    Label:
                        text: "Exerc\u00edcio"
                        bold: True
                        font_size: '16dp'
                        pos_hint: {"center_x": .15, "center_y": .5}
                    Label:
                        text: "S\u00e9ries"
                        bold: True
                        font_size: '16dp'
                        pos_hint: {"center_x": .45, "center_y": .5}
                    Label:
                        text: "Repet."
                        bold: True
                        font_size: '16dp'
                        pos_hint: {"center_x": .65, "center_y": .5}
                    Label:
                        text: "Interv."
                        bold: True
                        font_size: '16dp'
                        pos_hint: {"center_x": .85, "center_y": .5}
                    Button:

                Painel_Exercicio:
                Painel_Exercicio:
                Painel_Exercicio:
                Painel_Exercicio:
                Painel_Exercicio:
                Painel_Exercicio:
                Painel_Exercicio:
                Painel_Exercicio:
        Button:
            canvas:
                Rectangle:
                    source: "images/player.png"
                    pos: self.pos
                    size:self.size
            font_size: self.width/8
            size_hint: 1, .1
            pos_hint: {"center_x": .5, "center_y": 0}
            on_release: app.root.comeca()
        Button:
            background_color: 255, 255, 255, 1
            font_size: self.width/8
            size_hint: .1, .1
            pos_hint: {"center_x": .7, "center_y": .12}
            on_release: app.root.para()
# ADD BUTTON
        Button:
            pos_hint: {"center_x": .86, "center_y": .10}
            background_color: 0,0,0,0
            size_hint: .15, .10
            on_release: app.root.add_button()
            canvas:
                Rectangle:
                    source: "images/addbutton.png"
                    pos: self.pos
                    size:self.size

<ScreenManagement>:
