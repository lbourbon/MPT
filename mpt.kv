# encoding: utf-8

<TelaP>:
    name: 'TelaP'
    FloatLayout:
        canvas.before:
            Color:
                rgba:  .2, .6, .2, 1
            Rectangle:
                pos: self.pos
                size: self.size
# PAINEL SUPERIOR
        Label:
            text: "Musical Personal Trainer"
            color: 1,1,1,1
            #italic: True
            #bold: True
            font_size: self.width * .65
            pos_hint: {"center_x": .4, "center_y": .93}
            size_hint: .1, .1
            y: root.height - self.height
# CONFIGURAÇÕES
        Button:
            background_color: 0,0,0,0
            pos_hint: {"center_x": .93, "center_y": .93}
            size_hint: .07, .04
            on_release: app.root.troca_TelaE()
            canvas:
                Rectangle:
                    source: "images/config.png"
                    pos: self.pos
                    size:self.size
#PAINEL INFERIOR
        Button:
            canvas:
                Color:
                    rgba: 0,0,0,1
                Rectangle:
                    pos: self.pos
                    size:self.size
            size_hint: 1, .15
            y: 0


#ABAS
        AndroidTabs:
            canvas.before:
                Color:
                    rgba:  0,0,0,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 1, .73
            pos_hint: {"left": 0, "top": .88}

# MÚSICAS
            Aba:
                text: 'M\u00DASICAS'
                FloatLayout:
                    canvas.after:
                        Color:
                            rgba: 1,1,1,1
                        Line:
                            points: 0,self.height - 1, root.width, self.height - 1
                            width: 1
                    Label:
                        text: "Area de M\u00FAsica"
                        color: 1,1,1,1
                        pos_hint: {"center_x": .5, "center_y": .85}
                    CheckBox:
                        pos_hint: {"center_x": .8, "center_y": .5}
                        active: True
                    Label:
                        text: "Usar \u00e1udio de outro aplicativo"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        color: 1,1,1,1

#TREINOS
            Aba:
                text: 'TREINOS'
                FloatLayout:
                    canvas:
                        Color:
                            rgba: 1,1,1,1
                        Line:
                            points: 0,self.height - .1, root.width, self.height - .1
                            width: 1

                    ScrollView:
                        size_hint: 1, None
                        size: 800, root.height

                        MyGrid:
                            id: mygrid
                            cols: 1
                            padding: 5, root.height/2.6, 5, 50
                            spacing: 3
                            size_hint_y: None
                            height: 1000
                            Botao_Treino:
                                text: "SEGUNDA"
                                on_release: app.root.troca_TelaE()
                            Botao_Treino:
                                text: "TREINO 2"
                                on_release: app.root.troca_TelaE()
                            Botao_Treino:
                                text: "PEITO, COSTAS E TRICEPS"
                                on_release: app.root.troca_TelaE()

                            Botao_Treino:
                                text: "TREINO 4"
                                on_release: app.root.troca_TelaE()


# ADD BUTTON
                    Button:
                        pos_hint: {"center_x": .86, "center_y": .10}
                        background_color: 0,0,0,0
                        size_hint: .15, .13
                        on_release: app.root.add_button()
                        canvas:
                            Rectangle:
                                source: "images/addbutton.png"
                                pos: self.pos
                                size:self.size


# TELA DE EXERCICIOS

<TelaE>:
    name: 'TelaE'
    FloatLayout:
        canvas.before:
            Color:
                rgba:  .1, .1, .1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: 1, .88
        pos_hint: {"x":0, "top":1}
        canvas.after:
            Color:
                rgba: 1,1,1,1
            Line:
                points: 0,self.height - 1, root.width, self.height - 1
                width: 1
        Label:
            text: "TREINO 1"
            font_size: 30
            size_hint: .1, .08
            pos_hint: {"center_x": .5, "center_y": .93,}
        Button:
            text: "BACK"
            font_size: self.width/5
            size_hint: .1, .06
            pos_hint: {"center_x": .92, "center_y": .93}
            on_release: app.root.troca_TelaP()
        ScrollView:
            size_hint: 1, .86
            pos_hint: {"x":0, "y":0}            #size: 800, root.height
            GridLayout:
                cols: 1
                padding: 5
                spacing: 3
                size_hint_y: None
                height: 1000
                Botao_Treino:
                    text: "SUPINO"
                    on_release: app.root.troca_TelaE()
                Botao_Treino:
                    text: "VOADOR"
                    on_release: app.root.troca_TelaE()
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
                Botao_Treino:
        Button:
            canvas:
                Rectangle:
                    source: "images/play.png"
                    pos: self.pos
                    size:self.size
            font_size: self.width/8
            size_hint: .1, .1
            pos_hint: {"center_x": .4, "center_y": .12}
            on_release: app.root.comeca()
        Button:
            background_color: 255, 255, 255, 1
            font_size: self.width/8
            size_hint: .1, .1
            pos_hint: {"center_x": .7, "center_y": .12}
            on_release: app.root.para()
# ADD BUTTON
        Button:
            pos_hint: {"center_x": .86, "center_y": .10}
            background_color: 0,0,0,0
            size_hint: .15, .10
            on_release: app.root.add_button()
            canvas:
                Rectangle:
                    source: "images/addbutton.png"
                    pos: self.pos
                    size:self.size

<ScreenManagement>:
    TelaP:
    TelaE:

<AndroidTabs>:
    tab_indicator_height: '2dp'
    default_tab: 1
    tab_indicator_color: .1, .1, 1, 1

<AndroidTabsBar>:
    canvas.before:
        Color:
            rgba: 0.2, 0.6, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

<AndroidTabsLabel>:
    text_color_active: .1, .1, 1, 1
    text_color_normal: .1, .1, 1, .3

<Botao_Treino@Button>:
    background_color: 0,1,0,.7
    bold: True
    font_size: self.width/12
    size_hint: 1, None
    size: 200, 50
    on_release: app.root.troca_TelaE()

